<% include ../partials/header.ejs %>
<% include ../partials/main_nav.ejs %>
<main class="container">
    <div class="row">
        <div class="offset-md-1 col-md-10">
            <h1 style = "color:white ; text-align:center"><%= title %> </h1>  
            <a href="/concertlist/add" class="btn btn-primary" 
            role="button"><i class="fas fa-plus-circle"></i> Add Event</a>      
        <br>
        <br>
        <table class="table table-bordered table-striped table-hover">
            <tr class="d-flex">
                <th class="text-center col-3">Artist(s)</th>
                <th class="text-center col-2">Genre(s)</th>
                <th class="text-center col-2">Venue</th>
                <th class="text-center col-1">Date</th>
                <th class="text-center col-1">Ticket Price(s)</th>
                <th class="text-center col-1">Start Time</th>
                <th class="text-center col-2">Options</th>
            </tr>
            <% for(let count=0;count<ConcertList.length;count++) { %>    
            <tr class="d-flex">
                <td class="text-center col-3"><%= ConcertList[count].Artist %></td>
                <td class="text-center col-2"><%= ConcertList[count].Genre %></td>
                <td class="text-center col-2"><%= ConcertList[count].Venue %></td>
                <td class="text-center col-1"><%= ConcertList[count].Date %></td>
                <td class="text-center col-1"><%= ConcertList[count].Ticket_Price %></td>
                <td class="text-center col-1"><%= ConcertList[count].Start_Time %></td>
                <td class="text-center col-1">
                    <a href="/concertlist/edit/<%= ConcertList[count]._id %>" 
                        class="btn btn-success btn-sm">
                        <i class="fa-solid fa-pen fa-lg"></i> Update
                    </a>
                </td>
                <td class="text-center col-1">
                    <a href="/concertlist/delete/<%= ConcertList[count]._id %>" onclick="return confirm('Are you sure you want to delete this concert entry?')"
                        class="btn btn-danger btn-sm">
                        <i class="fa-solid fa-trash fa-lg"></i> Remove
                    </a>
                </td>
            </tr>
            <% } %>
        </table>
    </div>
    </div>
</main>
<% include ../partials/bottom_nav.ejs %>
<% include ../partials/footer_for_list.ejs %>